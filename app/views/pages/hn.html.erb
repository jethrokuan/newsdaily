<div class="container">
	<div class="row">
		<h2>Hackernews</h2>
		<div class="span3" id="posts">
			<%@hn.each_with_index do |post,index|%>
			<div class="row-fluid">
				<div class="span1"><i><h6><%=index+1%></h6></i></div>
				<div class="span11" id="content">
					<h6><%=link_to post.link.title, post.link.href, class: "livepreview"%></h6>
				</div>
			</div>
			<%end%>	
		</div>
		<div class="span1">
			<a href="" id="hide_iframe">Hide Preview</a>
		</div>
		<div class="span8" id="iframe">
			<iframe src="" frameborder="1" id="preview_site" height="500px" width="100%"></iframe>
		</div>
	</div>
</div>

<script type="text/javascript">
	$('#hide_iframe').click(function() {
		if(this.text=="Hide Preview")
		{
			$('#iframe').hide();
			$('#posts').removeClass('span3').addClass('span11');
			$('#hide_iframe').text("Show preview");
		}
		else
		{
			$('#iframe').show();
			$('#posts').removeClass('span11').addClass('span3');
			$('#hide_iframe').text("Hide Preview");
		}
	});
	$('a').mouseenter(function()
		{
			var url = this.href
			$('#preview_site').attr('src', url);
		});
</script>