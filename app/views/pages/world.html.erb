							<h6><%=link_to item.title, item.link, class: "livepreview"%></h6>
						</div>
					</div>
				<%end%>	
			</div>
		</div>
		<div class="span6">
			<h2><%=image_tag "nyt.png"%>  The New York Times</h2>
			<div id="posts">
				<%@nyt.items.each_with_index do |item,index|%>
