<% title "World News"%>
<div id="header">
	<div class="row-fluid">
		<div class="span1">
			<h1><a href=<%=root_path%> id="backbutton"><i class="icon-chevron-left"></i></a></h1>
		</div>
		<div class="span8">
			<h1>World News</h1>
			<p class="lead">Consolidating the important world news around the world.</p>
		</div>
		<div class="span3">
			<h3>&copy Jethro 2012</h3>
			<h5><%=link_to "My Website", "http://jethrokuan.1.ai"%></h5>
		</div>
	</div>
	
</div>
<div class="container" id="content">
	<div class="row">
		<div class="span6">
			<h2><%=image_tag "cnn.jpg"%>  CNN Top Stories</h2>
			<div id="posts">
				<%@cnn_top.items.each_with_index do |item,index|%>
					<div class="row-fluid">
						<div class="span1"><i><h6><%=index+1%></h6></i></div>
						<div class="span11">
							<h6><%=link_to item.title, item.link, class: "livepreview"%></h6>
						</div>
					</div>
				<%end%>	
			</div>
		</div>
		<div class="span6">
			<h2><%=image_tag "cnn.jpg"%>  CNN Asia</h2>
			<div id="posts">
				<%@cnn_asia.items.each_with_index do |item,index|%>
