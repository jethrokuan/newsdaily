<%title "Index"%>
<div class="container">
	<div class="row-fluid">
		<div class="span12 alignright">
			<%if user_signed_in?%>
				<h5>Signed in as <%=current_user.email%> | <%=link_to "My Bookmarks",bookmarks_path%> | <%=link_to "Sign Out", destroy_user_session_path, method: "DELETE"%></h5>
			<%else%>
				<h5><%=link_to "Sign In", new_user_session_path%> or <%=link_to "Sign Up", new_user_registration_path%></h5>
			<%end%>
		</div>
	</div>
</div>
<div class="container">
	<div class="well">
		<center>
			<h1><i class="icon-book"></i> NewsDaily</h1>
			<p class="lead">What would you like to read today?</p>
		</center>
	</div>
	<ul class="thumbnails">
		<li class="span4">
			<a href=<%=world_path%>>
				<div class="thumbnail">
					<center>
						<h1><i class="icon-globe"></i> </h1>
						<h2>World News</h2>
					</center>
				</div>
			</a>
		</li>
		<li class="span4">
			<a href=<%=tech_path%>>
				<div class="thumbnail">
					<center>
						<h1><i class="icon-rss"></i> </h1>
						<h2>Tech News</h2>
					</center>
				</div>
			</a>
		</li>
		<li class="span4">
			<div class="thumbnail">
				<center>
					<h1><i class="icon-time"></i> </h1>
					<h2>Coming Soon</h2>
				</center>
			</div>
		</li>
	</ul>
	<div class="container">
		<center>
			<h5>A feed you'd like included? A particular topic that you want an aggregated feed for? Let me know. <%=link_to "jethrokuan95@gmail.com", "mailto:jethrokuan95@gmail.com"%></h5>
			<h6><%=link_to "My Website", "http://jethrokuan.1.ai"%></h6>
			<hr>
			<p>&copy Jethro 2012</p>
		</center>
	</div>
</div>
