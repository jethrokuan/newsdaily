<div class="container">
	<div class="row">
		<div class="span6">
			<h2>Hackernews</h2>
			<%@hn["items"].each_with_index do |post,index|%>
			<div class="row-fluid">
				<div class="span1"><%=index+1%></div>
				<div class="span11" id="content">
					<h6><%=link_to post["title"], post["url"]%></h6>
					<p><%=post["postedAgo"]%> - <%=post["postedBy"]%></p>
				</div>
			</div>
			<%end%>	
		</div>
	</div>
</div>
<script type="text/javascript">
$(document).ready(function()
{

	$('#content a').each(function()
	{
		var url = encodeURIComponent( $(this).attr('href') ),
 
		thumbnail = $('<img />', {
			src: 'http://api.thumbalizr.com/?url=' + url,
			alt: 'Loading thumbnail...',
			width: 202,
			height: 152
		});
 
		// Setup the tooltip with the content
		$(this).qtip(
		{
			content: thumbnail,
			position: {
				my: 'left center',
				at: 'right center',
				viewport: $(window) // Attempt to keep it on screen at all times
			},
			style: {
				classes: 'ui-tooltip-thumbnail ui-tooltip-shadow'
			}
		});
	});
});
</script>