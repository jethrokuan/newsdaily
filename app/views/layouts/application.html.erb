<!DOCTYPE html>
<html>
	<head>
		<title>NewsDaily - <%= yield (:title) %></title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div id="nav">
			<div class="row-fluid">
				<div class="span12 alignright">
					<%if user_signed_in?%>
						<h5>Signed in as <%=current_user.email%> | <%=link_to "My Bookmarks",bookmarks_path%> | <%=link_to "Sign Out", destroy_user_session_path, method: "DELETE"%></h5>
					<%else%>
						<h5><%=link_to "Sign In", new_user_session_path%> or <%=link_to "Sign Up", new_user_registration_path%></h5>
					<%end%>
					<%if notice%>
					<div class="alert alert-success"><%= notice %></div>
					<%end%>
					<%if alert%>
						<div class="alert alert-error"><%= alert %></div>
					<%end%>
				</div>
			</div>
		</div>
				
			<%= yield %>	
	</body>
</html>